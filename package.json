{
  "name": "majapahitchain",
  "version": "1.0.0",
  "description": "Blockchain platform for Indonesian Media Freedom",
  "main": "main.ts",
  "type": "module",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__test__/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "node --experimental-specifier-resolution=node --loader ts-node/esm main.ts",
    "dev": "nodemon main.ts",
    "repl": "nodemon --experimental-specifier-resolution=node --loader ts-node/esm repl.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest  --watchAll --verbose --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erzetid/MajapahitChain.git"
  },
  "keywords": [
    "Blockchain",
    "dAps",
    "NFT",
    "WEB3"
  ],
  "author": "MajaphitChain",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erzetid/MajapahitChain/issues"
  },
  "homepage": "https://github.com/erzetid/MajapahitChain#readme",
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-plugin-jsdoc": "^37.5.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/elliptic": "^6.4.14",
    "@types/readline-sync": "^1.4.4",
    "@types/uuid": "^8.3.3",
    "elliptic": "^6.5.4",
    "nodemon": "^2.0.15",
    "readline-sync": "^1.4.10",
    "serializer.ts": "^0.0.12",
    "uuid": "^8.3.2"
  }
}
